<h2>Listing of article </h2>

<%if @articles.empty? %>
  <p>article is not been added yet</p>
<% else %>
  <ol>
    <% @articles.each do |article| %>
      <li>
        <%= link_to article.title, article_path(article.id)%>
        
      </li>
    <% end %>
  </ol>
<% end %>
<% if user_signed_in? && current_user.is_admin %>
  <%= link_to "New", new_article_path %>
<% end %>