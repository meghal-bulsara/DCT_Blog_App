<h2>Listing of Category : </h2>

<%if @categories.empty? %>
  <p>Category is not been added yet</p>
<% else %>
  <ol>
    <% @categories.each do |category| %>
      <li>
        <%= link_to category.name, category_path(category.id)%>
        (<%= Article.where('category_id = ?', category.id).length %>)
        
      </li>
    <% end %>
  </ol>
<% end %>
<% if user_signed_in? && current_user.is_admin %>
  <%= link_to "New", new_category_path %>
<% end %>