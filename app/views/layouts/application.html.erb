<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      Welcome <%= current_user.email %><br/>
      <%= link_to "Account Setting", edit_user_registration_path %>
      <%= link_to "Log Out", destroy_user_session_path, method: :delete %><br/>
    <% else %>
      <%= link_to "Login", new_user_session_path %> | <%= link_to "Registration", new_user_registration_path %><br/>
    <% end %>
    <%= notice %>
    <%= alert %>
    <%= yield %>
  </body>
</html>
